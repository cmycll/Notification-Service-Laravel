<?xml version="1.0"?>
<ruleset name="Notification Service Laravel">
    <description>Project PHP_CodeSniffer rules.</description>

    <!-- Base standard -->
    <rule ref="PSR12">
        <!-- Disable line-length checks -->
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <!-- Only scan PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Extra safety: suppress line-length sniff if it still triggers -->
    <rule ref="Generic.Files.LineLength">
        <severity>0</severity>
    </rule>

    <!-- Laravel front controller intentionally has side effects -->
    <rule ref="PSR1.Files.SideEffects">
        <exclude-pattern>public/index.php</exclude-pattern>
    </rule>

    <!-- Folders to scan (optional; you can still pass paths via CLI) -->
    <file>app</file>
    <file>config</file>
    <file>routes</file>
    <file>database</file>
    <file>tests</file>

    <!-- Ignore vendor and storage -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <!-- Blade templates are not plain PHP -->
    <exclude-pattern>resources/views/*.blade.php</exclude-pattern>
    <exclude-pattern>resources/views/**/*.blade.php</exclude-pattern>
</ruleset>
